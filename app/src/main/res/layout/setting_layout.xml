<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="30dp"
        android:padding="16dp">

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/lbl_settings_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:text="@string/settings"
            android:textColor="@color/toggle_text_color"
            android:textSize="14sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@id/auto_scroll_switch"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/close_image_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="@id/lbl_settings_text_view"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/lbl_settings_text_view"
            app:layout_constraintVertical_chainStyle="packed"
            app:srcCompat="@drawable/ic_close_black_24dp" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/lbl_enable_auto_scroll_text_view"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:text="@string/enable_auto_scroll"
            android:textColor="@color/toggle_text_color"
            android:textSize="14sp"
            app:layout_constraintBottom_toBottomOf="@id/auto_scroll_switch"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/auto_scroll_switch"
            tools:text="@string/enable_auto_scroll" />

        <com.google.android.material.switchmaterial.SwitchMaterial
            android:id="@+id/auto_scroll_switch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:background="@drawable/round_off_white_bg"
            android:minHeight="27dp"
            app:layout_constraintBottom_toTopOf="@id/lbl_auto_scroll_interval_text_view"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/lbl_settings_text_view"
            app:layout_constraintVertical_chainStyle="packed"
            app:thumbTint="@color/switch_thumb_tint_color"
            app:trackTint="@color/off_white" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/lbl_auto_scroll_interval_text_view"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:padding="8dp"
            android:text="@string/auto_scroll_interval"
            android:textColor="@color/toggle_text_color"
            android:textSize="14sp"
            app:layout_constraintBottom_toTopOf="@id/auto_scroll_custom_seek"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/auto_scroll_switch"
            app:layout_constraintVertical_chainStyle="packed"
            tools:text="@string/auto_scroll_interval" />

        <com.foobnix.pdf.info.view.CustomSeek
            android:id="@+id/auto_scroll_custom_seek"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            app:layout_constraintTop_toBottomOf="@id/lbl_auto_scroll_interval_text_view" />


        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/lbl_enable_continuous_auto_scroll_text_view"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:text="@string/enable_continuous_auto_scroll"
            android:textColor="@color/toggle_text_color"
            android:textSize="14sp"
            app:layout_constraintBottom_toBottomOf="@id/continuous_auto_scroll_switch"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/continuous_auto_scroll_switch"
            tools:text="@string/enable_continuous_auto_scroll" />

        <com.google.android.material.switchmaterial.SwitchMaterial
            android:id="@+id/continuous_auto_scroll_switch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:background="@drawable/round_off_white_bg"
            android:minHeight="27dp"
            app:layout_constraintBottom_toTopOf="@id/continuous_auto_scroll_custom_seek"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/auto_scroll_custom_seek"
            app:layout_constraintVertical_chainStyle="packed"
            app:thumbTint="@color/switch_thumb_tint_color"
            app:trackTint="@color/off_white" />

        <com.foobnix.pdf.info.view.CustomSeek
            android:id="@+id/continuous_auto_scroll_custom_seek"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            app:layout_constraintTop_toBottomOf="@id/lbl_enable_continuous_auto_scroll_text_view" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/lbl_whole_page_text_view"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:text="@string/whole_page_at_a_time"
            android:textColor="@color/toggle_text_color"
            android:textSize="14sp"
            app:layout_constraintBottom_toBottomOf="@id/whole_page_switch"
            app:layout_constraintEnd_toStartOf="@id/whole_page_switch"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/whole_page_switch"
            tools:text="@string/whole_page_at_a_time" />

        <com.google.android.material.switchmaterial.SwitchMaterial
            android:id="@+id/whole_page_switch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:background="@drawable/round_off_white_bg"
            android:minHeight="27dp"
            app:layout_constraintBottom_toTopOf="@id/volume_to_control_switch"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/continuous_auto_scroll_custom_seek"
            app:layout_constraintVertical_chainStyle="packed"
            app:thumbTint="@color/switch_thumb_tint_color"
            app:trackTint="@color/off_white" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/lbl_volume_to_control_text_view"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:text="@string/use_volume_to_control_navigation"
            android:textColor="@color/toggle_text_color"
            android:textSize="14sp"
            app:layout_constraintBottom_toBottomOf="@id/volume_to_control_switch"
            app:layout_constraintEnd_toStartOf="@id/volume_to_control_switch"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/volume_to_control_switch"
            tools:text="@string/use_volume_to_control_navigation" />

        <com.google.android.material.switchmaterial.SwitchMaterial
            android:id="@+id/volume_to_control_switch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:background="@drawable/round_off_white_bg"
            android:minHeight="27dp"
            app:layout_constraintBottom_toTopOf="@id/swipe_brightness_switch"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/whole_page_switch"
            app:layout_constraintVertical_chainStyle="packed"
            app:thumbTint="@color/switch_thumb_tint_color"
            app:trackTint="@color/off_white" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/lbl_swipe_brightness_text_view"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:text="@string/use_swipe_to_control_brightness"
            android:textColor="@color/toggle_text_color"
            android:textSize="14sp"
            app:layout_constraintBottom_toBottomOf="@id/swipe_brightness_switch"
            app:layout_constraintEnd_toStartOf="@id/swipe_brightness_switch"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/swipe_brightness_switch"
            tools:text="@string/use_swipe_to_control_brightness" />

        <com.google.android.material.switchmaterial.SwitchMaterial
            android:id="@+id/swipe_brightness_switch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:background="@drawable/round_off_white_bg"
            android:minHeight="27dp"
            app:layout_constraintBottom_toTopOf="@id/lbl_blue_light_text_view"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/volume_to_control_switch"
            app:layout_constraintVertical_chainStyle="packed"
            app:thumbTint="@color/switch_thumb_tint_color"
            app:trackTint="@color/off_white" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/lbl_blue_light_text_view"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:padding="8dp"
            android:text="@string/blue_light_filter"
            android:textColor="@color/toggle_text_color"
            android:textSize="14sp"
            app:layout_constraintBottom_toTopOf="@id/blue_light_seekbar"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/swipe_brightness_switch"
            app:layout_constraintVertical_chainStyle="packed"
            tools:text="@string/blue_light_filter" />

        <com.foobnix.pdf.info.view.CustomSeek
            android:id="@+id/blue_light_seekbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            app:layout_constraintTop_toBottomOf="@id/lbl_blue_light_text_view" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/lbl_inactive_dim_text_view"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:text="@string/dim_after_inactive"
            android:textColor="@color/toggle_text_color"
            android:textSize="14sp"
            app:layout_constraintBottom_toBottomOf="@id/inactive_dim_switch"
            app:layout_constraintEnd_toStartOf="@id/inactive_dim_switch"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/inactive_dim_switch"
            tools:text="@string/dim_after_inactive" />

        <com.google.android.material.switchmaterial.SwitchMaterial
            android:id="@+id/inactive_dim_switch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:background="@drawable/round_off_white_bg"
            android:minHeight="27dp"
            app:layout_constraintBottom_toTopOf="@id/inactive_dim_times_radio_group"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/blue_light_seekbar"
            app:layout_constraintVertical_chainStyle="packed"
            app:thumbTint="@color/switch_thumb_tint_color"
            app:trackTint="@color/off_white" />

        <RadioGroup
            android:id="@+id/inactive_dim_times_radio_group"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:orientation="horizontal"
            app:layout_constraintBottom_toTopOf="@id/shake_ss_switch"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/inactive_dim_switch"
            app:layout_constraintVertical_chainStyle="packed">

            <com.google.android.material.radiobutton.MaterialRadioButton
                android:id="@+id/five_min_radio_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/_5_minutes"
                android:textColor="@color/toggle_text_color"
                android:textSize="14sp" />

            <com.google.android.material.radiobutton.MaterialRadioButton
                android:id="@+id/ten_min_radio_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/_10_minutes"
                android:textColor="@color/toggle_text_color"
                android:textSize="14sp" />

            <com.google.android.material.radiobutton.MaterialRadioButton
                android:id="@+id/fifteen_min_radio_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/_15_minutes"
                android:textColor="@color/toggle_text_color"
                android:textSize="14sp" />
        </RadioGroup>

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/lbl_shake_ss_text_view"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:text="@string/enable_shake_to_ss"
            android:textColor="@color/toggle_text_color"
            android:textSize="14sp"
            app:layout_constraintBottom_toBottomOf="@id/shake_ss_switch"
            app:layout_constraintEnd_toStartOf="@id/shake_ss_switch"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/shake_ss_switch"
            tools:text="@string/enable_shake_to_ss" />

        <com.google.android.material.switchmaterial.SwitchMaterial
            android:id="@+id/shake_ss_switch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:background="@drawable/round_off_white_bg"
            android:minHeight="27dp"
            app:layout_constraintBottom_toTopOf="@id/alignment_justify_switch"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/inactive_dim_times_radio_group"
            app:layout_constraintVertical_chainStyle="packed"
            app:thumbTint="@color/switch_thumb_tint_color"
            app:trackTint="@color/off_white" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/lbl_alignment_justify_text_view"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:text="@string/enable_justified_alignment"
            android:textColor="@color/toggle_text_color"
            android:textSize="14sp"
            app:layout_constraintBottom_toBottomOf="@id/alignment_justify_switch"
            app:layout_constraintEnd_toStartOf="@id/alignment_justify_switch"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/alignment_justify_switch"
            tools:text="@string/enable_justified_alignment" />

        <com.google.android.material.switchmaterial.SwitchMaterial
            android:id="@+id/alignment_justify_switch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:background="@drawable/round_off_white_bg"
            android:minHeight="27dp"
            app:layout_constraintBottom_toTopOf="@id/lbl_line_height_text_view"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/shake_ss_switch"
            app:layout_constraintVertical_chainStyle="packed"
            app:thumbTint="@color/switch_thumb_tint_color"
            app:trackTint="@color/off_white" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/lbl_line_height_text_view"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:padding="8dp"
            android:text="@string/adjust_line_height"
            android:textColor="@color/toggle_text_color"
            android:textSize="14sp"
            app:layout_constraintBottom_toTopOf="@id/line_height_seekbar"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/alignment_justify_switch"
            app:layout_constraintVertical_chainStyle="packed"
            tools:text="@string/adjust_line_height" />

        <com.foobnix.pdf.info.view.CustomSeek
            android:id="@+id/line_height_seekbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            app:layout_constraintTop_toBottomOf="@id/lbl_line_height_text_view" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/lbl_hyphenation_text_view"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:text="@string/enable_hyphenation"
            android:textColor="@color/toggle_text_color"
            android:textSize="14sp"
            app:layout_constraintBottom_toBottomOf="@id/hyphenation_switch"
            app:layout_constraintEnd_toStartOf="@id/hyphenation_switch"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/hyphenation_switch"
            tools:text="@string/enable_hyphenation" />

        <com.google.android.material.switchmaterial.SwitchMaterial
            android:id="@+id/hyphenation_switch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:background="@drawable/round_off_white_bg"
            android:minHeight="27dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/line_height_seekbar"
            app:layout_constraintVertical_chainStyle="packed"
            app:thumbTint="@color/switch_thumb_tint_color"
            app:trackTint="@color/off_white" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.core.widget.NestedScrollView>
